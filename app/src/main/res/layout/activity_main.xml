<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/Hello" android:textSize="36sp"
            android:textStyle="bold|italic" android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView2"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/textoIdioma" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:onClick="Boton"/>
    <TextView
            android:text="Vacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoIdioma" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="191dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" android:textSize="36sp"/>
    <ImageView
            android:layout_width="136dp"
            android:layout_height="152dp" app:srcCompat="@drawable/ic_dragon" tools:layout_editor_absoluteY="59dp"
            tools:layout_editor_absoluteX="61dp" android:id="@+id/imageView"/>

</android.support.constraint.ConstraintLayout>